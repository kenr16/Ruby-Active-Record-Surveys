<h1>Update <%= @survey.name %></h1>

<form action="/survey/<%= @survey.id %>/delete" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit" class="btn btn-danger">Delete Survey</button>
</form>

<form action="/survey/<%= @survey.id() %>/modify" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="survey_name">Rename your survey:</label>
  <input id="survey_name" name="survey_name" type="text">
  <% @questions.each do |question| %>
    <h4><strong><%= question.content %></strong></h4>
    <label>Change question:</label>
    <input type="text" name="<%= question.id %>" value = "<%= question.content %>">
    <br>

  <% end %>

  <button type="submit">Update</button>
</form>
